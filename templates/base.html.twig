<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  

  <div class="collapse navbar-collapse" id="navbarColor03">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item  {% if currentMenu is defined and currentMenu=='home' %} active {% endif %}">
        <a class="nav-link" href="{{ path('home') }}">Home
          <span class="sr-only">(current)</span>
        </a>

      </li>
      <li class="nav-item   {% if currentMenu is defined and currentMenu=='produit' %} active {% endif %}">
        <a class="nav-link" href="{{path('produit')}}">Produits</a>
      </li>

        {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item {% if currentMenu is defined and currentMenu=='message' %} active {% endif %}">
                <a class="nav-link" href="{{path('message')}}">Boîte de récéption</a>
            </li>
        {% endif %}
    </ul>        

    {% if not app.user %}
    <span class="nav-item float-right">
        <a href="{{ path('security_login') }}" class="badge badge-success p-2">Se connecter</a>
    </span>      
    {% else %}
    <span class="nav-item float-right">
        <a href="{{ path('security_logout') }}" class="badge badge-danger p-2">Se déconnecter</a>
    </span>     
    {% endif %}    
    </div>
</nav>
    <div class="container-fluid">
        {% block body %}{% endblock %}
    </div>
        
    </body>
</html>

